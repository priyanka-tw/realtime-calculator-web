{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [2, "always"],
        "comma-dangle": 0
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "react/no-multi-comp": 0
            },
            "env": {
                "jest": true
            }
        }
    ]
}
